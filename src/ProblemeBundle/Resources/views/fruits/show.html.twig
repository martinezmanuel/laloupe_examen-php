{% extends '@Probleme/base.html.twig' %}

{% block body %}
    <h1>Fruits</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ fruit.id }}</td>
            </tr>
            <tr>
                <th>Fruit</th>
                <td>{{ fruit.fruit }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('fruits_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('fruits_edit', { 'id': fruit.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
